rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User credits collection - secure access
    match /userCredits/{userId} {
      // Allow users to read only their own credits
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Only allow server/admin to write (background script uses admin SDK)
      // Users cannot directly modify their credits
      allow write: if false;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

