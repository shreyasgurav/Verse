{
  "name": "verse-browser",
  "version": "1.0.0",
  "description": "A modern Chromium-based browser built with Electron and SwiftUI",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "clean": "rm -rf dist/ node_modules/.cache",
    "rebuild": "npm run clean && npm install && npm run build",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linter configured\" && exit 0"
  },
  "keywords": [
    "browser",
    "chromium",
    "electron",
    "cross-platform"
  ],
  "author": "Verse Browser Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "node-fetch": "^2.7.0",
    "openai": "^6.3.0",
    "playwright": "^1.56.0",
    "puppeteer-core": "^24.24.0"
  },
  "build": {
    "appId": "com.verse.browser",
    "productName": "Verse Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
